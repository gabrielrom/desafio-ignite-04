                  },
                  "example": {
                    "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                    "name": "Jhon doe",
                    "email": "jhondoe@gmail.com",
                    "admin": true,
                    "created_at": "2021-04-03T23:53:24.446Z",
                    "updated_at": "2021-04-03T23:53:24.446Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
